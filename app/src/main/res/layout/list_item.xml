<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="88dp"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/layout_each_list">

<ImageView
    android:layout_width="88dp"
    android:layout_height="88dp"
    android:id="@+id/image_represent"
    android:background="#FFF7DA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="88dp"
        android:layout_toRightOf="@id/image_represent"
        android:id="@+id/layout_text_button"
        android:weightSum="1"
        android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:id="@+id/text_english"
                android:layout_weight="0.4"
                tools:text="One"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_miwok"
                android:textColor="#FFFFFF"
                android:layout_weight="0.4"
                android:textSize="18sp"
                android:layout_marginRight="16dp"
                android:gravity="right"
                tools:text="Lutti"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_play_arrow_white"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:layout_marginRight="16dp"/>

    </LinearLayout>

</RelativeLayout>